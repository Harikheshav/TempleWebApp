@model TempleWebApp.Models.User

@{
    ViewData["Title"] = "login";
}

<h1>User-Login</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Uname" class="form-control" placeholder="User Name"/>
                <span asp-validation-for="Uname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Pword" class="form-control" type="password" placeholder="Password"/>
                <span asp-validation-for="Pword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-success" />
            </div>
        </form>
         <a asp-action="Register">Register</a> 
         <br/>
         <a asp-action="login" asp-controller="Admin">Are you an Admin?</a> 
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
