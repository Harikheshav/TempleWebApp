@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
ViewBag.aid =    @HttpContextAccessor.HttpContext.Session.GetString("AdminId");
}
@model TempleWebApp.Models.SlotBkng

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.aid != null)
{
<h4>Program Slot Assigner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SlotName" class="control-label">Slot Name</label>
                <select asp-for="SlotName" class ="form-control">
                <option value="ConcertHall">ConcertHall</option>
                <option value="FunctionHall">FunctionHall</option>
                <option value="Annadhanam">Annadhanam</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Det" class="control-label">Slot Details</label>
                <input asp-for="Det" class="form-control" />
                <span asp-validation-for="Det" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label">Slot Start Date and Time</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edt" class="control-label">Slot End Date and Time</label>
                <input asp-for="Edt" class="form-control" />
                <span asp-validation-for="Edt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label">Cost</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{

<b>Either you are logged in as a User or you are logged out...</b>
}